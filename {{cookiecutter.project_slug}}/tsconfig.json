{
    "compilerOptions": {
        "target": "ESNext",
        "sourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@main/*": [
                "./src/main/*"
            ],
            "@renderer/*": [
                "./src/renderer/*"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
